<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tb25.application.addNovelController"
      alignment="CENTER" spacing="30">

    <padding>
        <Insets bottom = "40.0" left = "30.0" right = "30.0" top = "40.0"/>
    </padding>

    <!-- Add Title -->
    <Label fx:id="title" text="Esy Novel Collection"
           textAlignment="CENTER" wrapText="true">

        <font>
            <Font name="MerriWeather" size="30.0"/>
        </font>

    </Label>

    <!-- Add Subtitle -->
    <Label fx:id="subtitle" text="Add Novel!"
           textAlignment="CENTER" wrapText="true">

        <font>
            <Font name="Merriweather" size="30.0"/>
        </font>
    </Label>

    <!-- Add Novel Name -->
    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Novel Name"
               textAlignment="CENTER" wrapText="true">
            <font>
                <Font name = "Merriweather" size="15.0"/>
            </font>
        </Label>

        <TextField fx:id="novel_name"
                   promptText="eg... Great Gabsy"
                   prefWidth="100.0" prefHeight="30.0"/>

        <Label text="Author Name" textAlignment="LEFT" wrapText="true"/>
        <TextField fx:id="novel_author" promptText="eg... F. Scott Fitzgerald
"                   prefWidth="100.0" prefHeight="30.0"/>

        <Label text="Progress Tracker"
        textAlignment="LEFT" wrapText="true"/>

        <HBox spacing="30.0" >
            <RadioButton fx:id="chapterRadio" text="chapter" toggleGroup="$progressTrackGroup"/>
            <RadioButton fx:id="pageRadio" text="page" toggleGroup="$progressTrackGroup"/>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Button fx:id="saveNovelBtn" text="Save"
                    prefHeight="20.0" prefWidth="100.0"
                    onAction="#onSaveNovelClick"
            />
        </HBox>

    </VBox>

</VBox>